{
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "semi": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "printWidth": 150,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "singleQuote": true,
    "overrides": [
        {
            "files": ["*.js", "*.jsx"],
            "options": {
                "parser": "babel"
            }
        },
        {
            "files": "*.scss",
            "options": {
                "parser": "scss"
            }
        },
        {
            "files": "*.css",
            "options": {
                "parser": "css"
            }
        }
    ]
}
